{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": 0,
        "react/jsx-indent": ["error", 4],
        "indent": ["error", 4],
        "react/prefer-stateless-function": 0,
        "arrow-parens": 0,
        "no-param-reassign": 0,
        "no-use-before-define": 0,
        "max-len": 0,
        "comma-dangle": 0
    }
}