{
    "name": "urbaton",
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@now/static-build",
            "config": { "distDir": "build" }
        },
        {
            "src": "server/*.py",
            "use": "@now/python",
            "config": { "maxLambdaSize": "50mb" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}
